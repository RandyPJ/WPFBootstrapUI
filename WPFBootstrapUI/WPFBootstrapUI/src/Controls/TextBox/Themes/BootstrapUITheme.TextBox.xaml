<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:WPFBootstrapUI.src.Controls"
    xmlns:local="clr-namespace:WPFBootstrapUI.src.Controls.TextBox.Themes">


    <Style x:Key="BootstrapTextbox" TargetType="{x:Type Controls:TextBox}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:TextBox}">
                    <Border
                        x:Name="OutterBorder"
                        BorderBrush="{StaticResource AlertPrimarySolidColorBrush}"
                        BorderThickness="4"
                        CornerRadius="5"
                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <Grid SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                            <Border
                                x:Name="InnerBorder"
                                Height="{TemplateBinding Height}"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="{Binding ElementName=OutterBorder, Path=CornerRadius}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                            <ScrollViewer x:Name="PART_ContentHost" />

                            <ContentPresenter
                                x:Name="PART_Content"
                                VerticalAlignment="Center"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                            <TextBlock x:Name="PART_Placeholder" Visibility="Collapsed" />

                            <TextBlock x:Name="PART_PasswordChar" Visibility="Collapsed" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>