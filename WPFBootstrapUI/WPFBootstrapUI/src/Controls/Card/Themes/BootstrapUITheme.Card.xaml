<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:WPFBootstrapUI.src.Controls"
    xmlns:local="clr-namespace:WPFBootstrapUI.src.Controls.Card.Themes">
    <Style TargetType="{x:Type Controls:Card}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:Card}">
                    <Border x:Name="OutterBorder">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="PART_CardHeader" />
                                <RowDefinition x:Name="PART_CardBody" />
                                <RowDefinition x:Name="PART_CardFooter" />
                            </Grid.RowDefinitions>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>