<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AlertControl="clr-namespace:WPFBootstrapUI.src.Controls.Alert.Implementation"
    xmlns:local="clr-namespace:WPFBootstrapUI.src.Controls.Alert.Themes">


    <Style x:Key="Alert-Base" TargetType="{x:Type AlertControl:Alert}">
        <Setter Property="AlertControl:Alert.CornerRadius" Value="2" />
        <Setter Property="Padding" Value="20,12" />
    </Style>


    <Style x:Key="Alert-Primary" TargetType="{x:Type AlertControl:Alert}">
        <Setter Property="AlertControl:Alert.CornerRadius" Value="2" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="AlertForeground" Value="Aqua" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type AlertControl:Alert}">
                    <Grid>
                        <Border
                            Background="White"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="{Binding Path=(AlertControl:Alert.CornerRadius)}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{TemplateBinding AlertForeground}"
                            Text="{TemplateBinding Text}" />
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>