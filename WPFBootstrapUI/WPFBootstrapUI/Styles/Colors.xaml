<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFBootstrapUI.Styles">

    <!--  Base and Solid Colors  -->
    <Color x:Key="PrimaryColor">#0074d9</Color>
    <Color x:Key="InfoColor">#17a2b8</Color>
    <Color x:Key="SuccessColor">#28a745</Color>
    <Color x:Key="WarningColor">#ffc107</Color>
    <Color x:Key="DangerColor">#dc3545</Color>
    <Color x:Key="DarkColor">#343a40</Color>
    <Color x:Key="SecondaryColor">#6c757d</Color>
    <Color x:Key="LightSolidColor">#f8f9fa</Color>
    <Color x:Key="WhiteColor">#ffffff</Color>
    <Color x:Key="AlertPrimaryColor">#CAE6FD</Color>
    <Color x:Key="PrimaryHoveredColor">#006CD3</Color>
    <Color x:Key="PrimaryDarkHoveredColor">#0e5fad</Color>
    <Color x:Key="SecondaryHoveredColor">#5a6268</Color>
    <Color x:Key="SuccessHoveredColor">#218838</Color>
    <Color x:Key="DangerHoveredColor">#c82333</Color>
    <Color x:Key="WarningHoveredColor">#d39e00</Color>
    <Color x:Key="InfoHoveredColor">#117a8b</Color>
    <Color x:Key="LightHoveredColor">#dae0e5</Color>
    <Color x:Key="DarkHoveredColor">#23272b</Color>
    <Color x:Key="LinkButtonForegroundColor">#007bff</Color>
    <Color x:Key="LightBlueControlColor">#7ABFFA</Color>
    <Color x:Key="JumbotronColor">#E9ECEF</Color>


    <!--  Solid Colors  -->
    <SolidColorBrush x:Key="PrimarySolidColorBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="InfoSolidColorBrush" Color="{StaticResource InfoColor}" />
    <SolidColorBrush x:Key="SuccessSolidColorBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningSolidColorBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerSolidColorBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="DarkSolidColorBrush" Color="{StaticResource DarkColor}" />
    <SolidColorBrush x:Key="SecondarySolidColorBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="LightSolidColorBrush" Color="{StaticResource LightSolidColor}" />
    <SolidColorBrush x:Key="WhiteSolidColorBrush" Color="{StaticResource WhiteColor}" />
    <SolidColorBrush x:Key="AlertPrimarySolidColorBrush" Color="{StaticResource AlertPrimaryColor}" />
    <SolidColorBrush x:Key="AlertPrimaryForegroundSolidColorBrush" Color="#004281" />
    <SolidColorBrush x:Key="AlertSecondarySolidColorBrush" Color="#E2E3E5" />
    <SolidColorBrush x:Key="AlertSecondaryForegroundSolidColorBrush" Color="#383D41" />
    <SolidColorBrush x:Key="AlertSuccessSolidColorBrush" Color="#D4EDDA" />
    <SolidColorBrush x:Key="AlertSuccessForegroundSolidColorBrush" Color="#155724" />
    <SolidColorBrush x:Key="AlertDangerSolidColorBrush" Color="#F8D7DA" />
    <SolidColorBrush x:Key="AlertDangerForegroundSolidColorBrush" Color="#721C24" />
    <SolidColorBrush x:Key="AlertWarningSolidColorBrush" Color="#FFF3CD" />
    <SolidColorBrush x:Key="AlertWarningForegroundSolidColorBrush" Color="#856404" />
    <SolidColorBrush x:Key="AlertInfoSolidColorBrush" Color="#D1ECF1" />
    <SolidColorBrush x:Key="AlertInfoForegroundSolidColorBrush" Color="#0C5460" />
    <SolidColorBrush x:Key="AlertLightSolidColorBrush" Color="#FEFEFE" />
    <SolidColorBrush x:Key="AlertLightForegroundSolidColorBrush" Color="#8C8C8D" />
    <SolidColorBrush x:Key="AlertDarkSolidColorBrush" Color="#D6D8D9" />
    <SolidColorBrush x:Key="AlertDarkForegroundSolidColorBrush" Color="#1B1E21" />
    <SolidColorBrush x:Key="PrimaryHoveredSolidColorBrush" Color="{StaticResource PrimaryHoveredColor}" />
    <SolidColorBrush x:Key="PrimaryDarkHoveredSolidColorBrush" Color="{StaticResource PrimaryDarkHoveredColor}" />
    <SolidColorBrush x:Key="SecondaryHoveredSolidColorBrush" Color="{StaticResource SecondaryHoveredColor}" />
    <SolidColorBrush x:Key="SuccessHoveredSolidColorBrush" Color="{StaticResource SuccessHoveredColor}" />
    <SolidColorBrush x:Key="DangerHoveredSolidColorBrush" Color="{StaticResource DangerHoveredColor}" />
    <SolidColorBrush x:Key="WarningHoveredSolidColorBrush" Color="{StaticResource WarningHoveredColor}" />
    <SolidColorBrush x:Key="InfoHoveredSolidColorBrush" Color="{StaticResource InfoHoveredColor}" />
    <SolidColorBrush x:Key="LightHoveredSolidColorBrush" Color="{StaticResource LightHoveredColor}" />
    <SolidColorBrush x:Key="DarkHoveredSolidColorBrush" Color="{StaticResource DarkHoveredColor}" />
    <SolidColorBrush x:Key="LinkButtonForegroundSolidColorBrush" Color="{StaticResource LinkButtonForegroundColor}" />
    <SolidColorBrush x:Key="LightBlueControlBorderBrush" Color="{StaticResource LightBlueControlColor}" />
    <SolidColorBrush x:Key="JumbotronSolidColorBrush" Color="{StaticResource JumbotronColor}" />
</ResourceDictionary>