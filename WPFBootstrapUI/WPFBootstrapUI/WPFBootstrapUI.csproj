<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
   <PropertyGroup>
    <TargetFrameworks>net46;netstandard1.4</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
