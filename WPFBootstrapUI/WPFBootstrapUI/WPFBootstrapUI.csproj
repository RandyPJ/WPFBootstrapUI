<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
    <PropertyGroup>
      <TargetFrameworks>net45;net451;net46;net471;net472;net48</TargetFrameworks>
      <UseWPF>true</UseWPF>
      <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
      <RootNamespace>WPFBootstrapUI</RootNamespace>
      <AssemblyName>WPFBootstrapUI</AssemblyName>
      <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
      <EnableDefaultEmbeddedResourceItems>false</EnableDefaultEmbeddedResourceItems>

      <!--Nuget Information-->
      <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
      <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
      <Authors>rpj</Authors>
      <RepositoryUrl>https://github.com/RandyPJ/WPFBootstrapUI</RepositoryUrl>
      <PackageTags>Bootstrap UI WPF</PackageTags>
    </PropertyGroup>
  
    <ItemGroup>
      <Compile Include="Animations\StoryBoardHelper.cs" />
      <Compile Include="ControlsAssists\BootstrapTextBoxAssist.cs" />
      <Compile Include="ControlsAssists\BorderAssist.cs" />
      <Compile Include="ControlsAssists\PasswordHelper.cs" />
      <Compile Include="ControlsAssists\TextAssist.cs" />
      <Compile Include="Controls\Alert\Implementation\Alert.cs" />
      <Compile Include="Controls\Badge\Implementation\Badge.cs" />
      <Compile Include="Controls\Card\Implementation\Card.cs" />
      <Compile Include="Controls\Card\Implementation\CardChildPanel.cs" />
      <Compile Include="Controls\PopOver\Implementation\PopOver.cs" />
      <Compile Include="Converters\BooleanToVisibilityConverter.cs" />
      <Compile Include="Properties\AssemblyInfo.cs" />
      <Compile Include="Properties\Resources.Designer.cs" />
      <Compile Include="Properties\Settings.Designer.cs" />
      <Compile Include="Styles\WindowStyles.xaml.cs" />
    </ItemGroup>
    <ItemGroup>
      <EmbeddedResource Include="Properties\Resources.resx" />
    </ItemGroup>
</Project>