    xmlns:bootstrap="http://schemas.softcode.com/WPFBootrapUI"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:BootstrapUISample"
    Title="MainWindow"
    Width="800"
    Height="450"
    Icon="{iconPacks:FontAwesomeImage Kind=BootstrapBrands,
                                      Brush=White}"
    Style="{StaticResource Window-Primary}"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <bootstrap:Alert
            Grid.Row="0"
            Content="Hola Mundo"
            Style="{StaticResource Alert-Primary}" />
        <Button
            Grid.Row="1"
            Content="Hello World"
            Style="{StaticResource btn-primary}" />
    </Grid>
</Window>

