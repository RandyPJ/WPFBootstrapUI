<Window
    x:Class="BootstrapUISample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bootstrap="clr-namespace:WPFBootstrapUI.src.Controls.Alert.Implementation;assembly=WPFBootstrapUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BootstrapUISample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <bootstrap:Alert
            Margin="10"
            Content="Hola mundo"
            Style="{StaticResource Alert-Primary}" />
        <bootstrap:Alert
            Margin="10"
            Content="Hola mundo"
            Style="{StaticResource Alert-Secondary}" />

        <bootstrap:Alert
            Margin="10"
            Content="Hola mundo"
            Style="{StaticResource Alert-Success}" />

        <bootstrap:Alert
            Margin="10"
            Content="Hola mundo"
            Style="{StaticResource Alert-Danger}" />

        <bootstrap:Alert
            Margin="10"
            Content="Hola mundo"
            Style="{StaticResource Alert-Warning}" />

        <bootstrap:Alert
            Margin="10"
            Content="Hola mundo"
            Style="{StaticResource Alert-Info}" />

        <bootstrap:Alert
            Margin="10"
            Content="Hola mundo"
            Style="{StaticResource Alert-Light}" />

        <bootstrap:Alert
            Margin="10"
            Content="Hola mundo"
            Style="{StaticResource Alert-Dark}" />
    </StackPanel>
</Window>
